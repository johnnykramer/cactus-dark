<section>
  <img src="/images/me.jpg" style="max-width:200px;float:right;margin-left:25px;border-radius:50%;">
  <h2 class="h1">Who am I?</h2>
  <p>My name is <strong>Petro Kuzmychev</strong>, but you can call me <strong>johnnykramer</strong>.</p>
  <p>Iâ€™m Full-stack Javascript Developer.</p>
  <p>You can see my CV <a href="/cv">here</a>.</p>
</section>

<section id="about">
  <p style="display: inline">
    <% if (theme.customize.social_links) { %>
      Find me on
      <ul id="socialinfo">
        <% for(var i in theme.customize.social_links) { %>
          <li><a class="icon" target="_blank" href="<%- url_for(theme.customize.social_links[i]) %>"><i class="fa fa-<%= i %>"></i></a></li>
        <% } %>
      </ul>.
    <% } %>
  </p>
</section>

<section id="writing">
  <span class="h1"><a href="<%- url_for("archives") %>">Latest posts</a></span>
  <ul class="post-list">
    <% if (theme.customize.show_all_posts) { %>
      <% var show_posts = page.posts.sort('date', 'desc') %>
    <% } else { %>
      <% var show_posts = site.posts.sort('date', 'desc').limit(theme.customize.post_count || 5) %>
    <% } %>
    <% show_posts.each(function(post, i){ %>
      <li class="post-item">
        <%- partial('_partial/post/date', { post: post, class_name: 'meta' }) %>
        <span><%- partial('_partial/post/title', { post: post, index: true, class_name: '' }) %></span>
      </li>
    <% }); %>
  </ul>
  <% if (theme.customize.show_all_posts) { %>
    <%- partial('_partial/pagination') %>
  <% } %>
</section>

<% if (site.data.projects) { %>
<section id="projects">
  <span class="h1">Pet projects</span>
  <% site.data.projects.forEach(function(obj) { %>
    <h2><%= obj.year %></h2>
    <ul class="project-list">
      <% obj.projects.forEach(function(project) { %>
        <li class="project-item">
          <a href="<%= project.url %>" target="_blank"><%= project.name %></a>: <%= project.desc %>
        </li>
      <% }) %>
    </ul>
  <% }) %>
</section>
<% } %>
